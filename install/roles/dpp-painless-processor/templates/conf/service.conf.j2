include "application.conf"
painless-processor {
  actor-system-name = "painless-service-system"
  # at least one of endpoints must exist
  endpoints {
    rest = true // setup rest endpoint
    grpc = true // setup grpc endpoint
  }
  grpc {
    port = {{ ports.dpp_painless_processor_grpc | int + item }}
    max-message-size-bytes = 536870912
  }
  rest {
    address = 0.0.0.0
    port = {{ ports.dpp_painless_processor_rest | int + item }}
  }
}